default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    match(type: "appstore") # << دي مهمة جدًا!
    
    build_app(
      scheme: "CICD",
      export_method: "app-store",
      allowProvisioningUpdates: true
    )
    
    upload_to_testflight
  end
end